            border-radius: 20px;
            font-size: 1em;
            margin-right: 10px;
            transition: border-color 0.2s;
        }

        .chat-input-area input:focus {
            border-color: #1976D2;
            outline: none;
        }

        .chat-input-area button {
            padding: 10px 20px;
            background-color: #1976D2;
            color: white;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            font-size: 1em;
            font-weight: bold;
            transition: background-color 0.2s, opacity 0.2s;
        }

        .chat-input-area button:hover:not(:disabled) {
            background-color: #1565C0;
        }

        .chat-input-area button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        /* Estilos para el punto de escritura (animaci칩n) */
        .typing-dot {
            font-size: 1.2em;
            margin-left: 5px;
            animation: blink 1s infinite;
        }

        @keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        /* Media Queries para responsividad en m칩viles */
