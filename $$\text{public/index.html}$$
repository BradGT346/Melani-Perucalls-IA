<body>

    <div class="chat-container">
        <div class="header">
            Melanie IA 游뱄
        </div>

        <div class="chat-output" id="chat-output">
            <div class="ia-msg">
                <div class="msg-bubble">
                    <span class="sender-label">Melanie: </span>
                    춰Hola! Soy Melanie, tu asistente de IA. Estoy aqu칤 para ayudarte con cualquier pregunta que tengas. 쮺칩mo puedo asistirte hoy?
                </div>
            </div>
        </div>

        <div class="chat-input-area">
            <input type="text" id="user-input" placeholder="Escribe tu mensaje aqu칤..." onkeydown="if(event.key === 'Enter') enviarMensaje()">
            <button id="enviar-btn" onclick="enviarMensaje()">Enviar</button>
        </div>
    </div>

    <script>
        const CHAT_API_URL = '/api/chat';
        let conversationHistory = []; // Almacena el historial para enviarlo a la API
        let isTyping = false; // Bandera para evitar env칤os m칰ltiples mientras la IA responde
        let typeWriterIndex = 0;
        let responseText = '';
        let typingInterval;
        let iaMessageElement = null; // Referencia al div de la IA mientras escribe
        const enviarBtn = document.getElementById('enviar-btn');
        const userInput = document.getElementById('user-input');
        const chatOutput = document.getElementById('chat-output');

        // --- Funciones de Utilidad ---

        function scrollHeight() {
            chatOutput.scrollTop = chatOutput.scrollHeight;
        }

        // Crea y a침ade un mensaje al DOM
        function appendMessage(sender, text, isFinal = true) {
            let className = sender === 'user' ? 'user-msg' : 'ia-msg';
            let senderLabel = sender === 'user' ? 'T칰: ' : 'Melanie: ';

            const newDiv = document.createElement('div');
            newDiv.className = className;

            const bubble = document.createElement('div');
            bubble.className = 'msg-bubble';
            bubble.innerHTML = `<span class="sender-label">${senderLabel}</span>${text}`;
            newDiv.appendChild(bubble);

            chatOutput.appendChild(newDiv);
            scrollHeight();

            // Solo a침adimos la respuesta completa al historial una vez que termina de escribirse
            if (isFinal) {
                if (sender === 'ia') {
                    // Guardamos solo el texto de la IA en el historial (sin la etiqueta Melanie:)
                    conversationHistory.push({ role: 'model', text: text });
                } else {
                    // Guardamos el mensaje del usuario
                    conversationHistory.push({ role: 'user', text: text });
                }
            }
            return newDiv;
        }

        // --- Animaci칩n de Escritura (Typewriter) ---

        function typeWriter() {
            if (typeWriterIndex < responseText.length) {
                // A침ade el siguiente car치cter al mensaje visible
                const currentText = responseText.substring(0, typeWriterIndex + 1);
                const typingDot = `<span class="typing-dot">|</span>`; // Cursor
                iaMessageElement.querySelector('.msg-bubble').innerHTML = `<span class="sender-label">Melanie: </span>${currentText}${typingDot}`;
                
                typeWriterIndex++;
                scrollHeight();
            } else {
                // Termin칩 de escribir
                clearInterval(typingInterval);
                isTyping = false;
                enviarBtn.disabled = false;
                userInput.disabled = false;

                // Muestra el texto final (sin el cursor)
                const finalText = responseText;
                iaMessageElement.querySelector('.msg-bubble').innerHTML = `<span class="sender-label">Melanie: </span>${finalText}`;
                
                // A침adimos la respuesta al historial (isFinal = true)
                appendMessage('ia', finalText, true);
                
                scrollHeight();
            }
        }

        // --- Funci칩n Principal de Env칤o ---

        async function enviarMensaje() {
            const userPrompt = userInput.value.trim();
            if (!userPrompt || isTyping) return; // No env칤a si est치 vac칤o o si la IA est치 escribiendo

            isTyping = true;
            enviarBtn.disabled = true;
            userInput.disabled = true;
            userInput.value = ''; // Limpia el input

            // 1. A침adimos visualmente el mensaje del usuario
            appendMessage('user', userPrompt, false); 
            
            // 2. Preparamos el mensaje temporal de la IA para la animaci칩n
            iaMessageElement = appendMessage('ia', '...', false); // El texto inicial '...' se reemplazar치
            iaMessageElement.querySelector('.msg-bubble').innerHTML = `<span class="sender-label">Melanie: </span><span class="typing-dot">|</span>`;

            try {
                const response = await fetch(CHAT_API_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        userPrompt: userPrompt,
                        history: conversationHistory 
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    responseText = data.response; // La respuesta completa de la IA
                    typeWriterIndex = 0;
                    typingInterval = setInterval(typeWriter, 40); // Inicia la animaci칩n de escritura
                } else {
                    clearInterval(typingInterval);
                    isTyping = false;
                    enviarBtn.disabled = false;
                    userInput.disabled = false;
                    iaMessageElement.querySelector('.msg-bubble').innerHTML = `<span class="sender-label">Melanie: </span>Error: ${data.error || 'Algo sali칩 mal. Int칠ntalo de nuevo.'}`;
                }

            } catch (error) {
                console.error('Error de red:', error);
                clearInterval(typingInterval);
                isTyping = false;
                enviarBtn.disabled = false;
                userInput.disabled = false;
                iaMessageElement.querySelector('.msg-bubble').innerHTML = `<span class="sender-label">Melanie: </span>Error de conexi칩n. Verifica el servidor.`;
            }
        }

        // Event listener para enviar con la tecla Enter
        userInput.addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                e.preventDefault(); // Evita el salto de l칤nea por defecto
                enviarMensaje();
            }
        });
    </script>

</body>
</html>
